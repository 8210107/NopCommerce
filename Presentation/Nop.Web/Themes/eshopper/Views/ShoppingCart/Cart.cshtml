@model ShoppingCartModel
@using Nop.Web.Models.Checkout
@using Nop.Web.Models.ShoppingCart;
@{
    Layout = "_ColumnsOne";

    //title
    NopHtml.AddTitleParts(T("PageTitle.ShoppingCart").Text);
}
@if (!Model.OnePageCheckoutEnabled)
{
    @await Component.InvokeAsync("CheckoutProgress", new { step = CheckoutProgressStep.Cart })
}
else
{
    <div class="container">
        <div class="row">
            <!-- <img src="~/Themes/BSNopFlaty/Content/services.png" />-->
            <!-- Rectangle Banners -->
            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                <div class="rec-banner active_position ">
                    <div class="banner pull-text-center">
                        <h4>
                            <a>
                                @*<i class="fa fa-shopping-cart fa-2x"></i>*@
                                <span>
                                    @T("Checkout.Progress.Cart")
                                </span>
                            </a>
                        </h4>
                    </div>

                </div>

            </div>



            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                <div class="rec-banner deactive_position">


                    <div class="banner pull-text-center">

                        <h4><a><span><i class="fa fa-map-marker fa-2x"></i></span>@T("Checkout.Progress.Address")</a></h4>

                    </div>
                </div>

            </div>

            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                <div class="rec-banner deactive_position">

                    <div class="banner pull-text-center">

                        <h4><a><span><i class="fa fa-truck fa-2x"></i></span>@T("Checkout.Progress.Shipping")</a></h4>
                        <p></p>
                    </div>
                </div>

            </div>

            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                <div class="rec-banner deactive_position">

                    <div class="banner pull-text-center">

                        <h4><a><span><i class="fa fa-credit-card fa-2x"></i></span>@T("Checkout.Progress.Payment")</a></h4>

                    </div>
                </div>

            </div>

            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                <div class="rec-banner deactive_position">

                    <div class="banner pull-text-center">

                        <h4><a><span><i class="fa fa-thumbs-up fa-2x"></i></span>@T("Checkout.Progress.Confirm")</a></h4>

                    </div>
                </div>

            </div>


            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                <div class="rec-banner deactive_position">

                    <div class="banner pull-text-center">

                        <h4><a><span><i class="fa fa-check fa-2x"></i></span>@T("Checkout.Progress.Complete")</a></h4>


                    </div>
                </div>

            </div>



            <!-- end: Rectangle Banners -->
        </div>
        <br />
    </div>
}
<div class="container">

    <div class="features_items my-account-page">
        <!--features_items-->
        <h2 class="title text-center">@T("ShoppingCart")</h2>
        @*@Html.Partial("OrderSummary", Model)*@
        @await Component.InvokeAsync("OrderSummary", new { overriddenModel = Model })
    </div>



</div>





