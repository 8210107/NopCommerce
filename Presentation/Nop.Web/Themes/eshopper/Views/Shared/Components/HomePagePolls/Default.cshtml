@model IList<PollModel>

@if (Model.Count > 0)
{
    <div class="mid-content-title">
        <h2 class="title text-center">@T("Polls.Title")</h2>
    </div>

    <div class="offer offer-default">
        @{
            var i = 0;
        }
        @foreach (var poll in Model)
        {
            @await Html.PartialAsync("_Poll", poll)
            if (i != 0)
            {
                @:<legend></legend>
            }
            i++;
        }
            
        
    </div>

}
